<!DOCTYPE html>
<html lang="en">
  <%- include('head') %>
  <body>
    <div style="width: 100%; height: 100%;">
      <%- include('header') %>
      <div class="flex" style="width: 100%; min-height: calc(100vh - 154px);">
        <% if (toc && !isMobile) { %>
          <div class="flex justify-center items-start" style="width: 25%; flex-shrink: 0;">
            <%- toc %>
          </div>
        <% } %>
        <div class="flex-g-1 <%= isMobile ? 'page-container-m' : 'page-container' %>">
          <div><span class="post-title"><%= pageTitle %></span></div>
          <div class="flex" style="margin-top: 20px;">
            <% for( var i = 0; i < tags.length; i++ ) { %>
              <div class="tag-item"><a href="/tags/<%= tags[i] %>" style="color: rgb(102, 102,102);">#<%= tags[i] %></a></div>
            <% } %>
          </div>
          <p style="font-family: sans-serif; font-size: 14px; color: rgb(102, 102,102);">Published <%= date %></p>
          <div class="md-container">
            <%- content %>
          </div>
        </div>
        <% if (!isMobile) { %>
          <div style="width: 25%; flex-shrink: 0;"></div>
        <% } %>
      </div>
      <%- include('footer') %>
    </body>
    </div>
</html>
